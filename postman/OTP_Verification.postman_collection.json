{
    "info": {
        "name": "Pet Wellness - OTP Email Verification",
        "description": "API collection for OTP-based email verification during user registration",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Register User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"username\": \"johndoe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"phoneNumber\": \"+1234567890\",\n  \"address\": \"123 Main St, Springfield, IL\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/auth/register",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "auth",
                        "register"
                    ]
                },
                "description": "Register a new user. Generates and sends 6-digit OTP to email. OTP expires in 5 minutes."
            },
            "response": []
        },
        {
            "name": "2. Verify OTP",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"john@example.com\",\n  \"otp\": \"123456\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/auth/verify-otp",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "auth",
                        "verify-otp"
                    ]
                },
                "description": "Verify email using OTP. Sets isEmailVerified to true and clears OTP fields."
            },
            "response": []
        },
        {
            "name": "3. Resend OTP",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"john@example.com\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/auth/resend-otp",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "auth",
                        "resend-otp"
                    ]
                },
                "description": "Resend OTP to email. Generates new 6-digit OTP with 5-minute expiry."
            },
            "response": []
        },
        {
            "name": "4. Login (After Verification)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"emailOrUsername\": \"johndoe\",\n  \"password\": \"password123\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/auth/login",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "auth",
                        "login"
                    ]
                },
                "description": "Login after email verification. Returns JWT token. Fails if email not verified."
            },
            "response": []
        },
        {
            "name": "5. Login (Before Verification - Should Fail)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"emailOrUsername\": \"johndoe\",\n  \"password\": \"password123\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/auth/login",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "auth",
                        "login"
                    ]
                },
                "description": "Test login before email verification. Should return 400 error: 'Please verify your email before logging in'"
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8080",
            "type": "string"
        }
    ]
}